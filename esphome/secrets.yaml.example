# ESPHome Secrets - Copy to secrets.yaml and fill in your values
# IMPORTANT: Never commit secrets.yaml to version control!

wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# Generate a random 32-byte base64 key for API encryption
# You can generate one with: openssl rand -base64 32
api_encryption_key: "GENERATE_A_RANDOM_32_BYTE_BASE64_KEY"

# OTA password for over-the-air updates
ota_password: "your_ota_password_here"

# Fallback AP password (used when WiFi connection fails)
ap_password: "hydroponics_fallback"
